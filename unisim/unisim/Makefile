CXX=g++
INCLUDE_DIR=-I .
CFLAGS=-O2 -Wall -g -std=c++17
FILES=utility.cpp vector.cpp physics.cpp universe.cpp MIMOServer.cpp messaging.cpp
EXT_LIBS=
EXT_ST_LIBS=

all: unisim-bin

clean:
	rm unisim libdiana.so

diana-shared:
	$(CXX) $(CFLAGS) $(INCLUDE_DIR) $(FILES) $(EXT_LIBS) $(EXT_ST_LIBS) -o libdiana.so -fPIC -shared

unisim-bin:
	$(CXX) $(CFLAGS) $(INCLUDE_DIR) $(FILES) $(EXT_LIBS) $(EXT_ST_LIBS) unisim.cpp -o unisim
